@model IlyaSnigirPhotographer.Models.Message

@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование новости на главной</h2>

@using (Html.BeginForm("EditNews", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <h4 class="control-label col-md-2">Заголовок новости</h4>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Title, 2, 50, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <h4 class="control-label col-md-2">Текст новости</h4>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Body, 10, 50, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IsShown)

    <div class="form-group">
        <h4 class="control-label col-md-2">Отображать окно с новостью?</h4>
        <input id="IsShown" class="col-md-10" type="checkbox" value="true" name="IsShown" />
        <input name="IsShown" type="hidden" value="false" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменения" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
