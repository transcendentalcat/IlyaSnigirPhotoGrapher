@model IEnumerable<IlyaSnigirPhotographer.Models.Photo>

@{
    ViewBag.Title = "ManagePhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.AlbumTitle</h2>

<p>
    @Html.ActionLink("Добавить фотографию", "AddPhoto", new { id = ViewBag.AlbumId })
</p>
<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.PhotoFile != null)
                {
                    <div class="photo-display">
                        <img width="150" src="@Url.Action("GetImage", "Home", new { id = item.PhotoID })" />
                    </div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Переименовать", "RenamePhoto", new { id = item.PhotoID }) |
                @Html.ActionLink("Удалить", "DeletePhoto", new { id = item.PhotoID }, new { @class = "viewDialog", data_dialog_title = "Удаление фотографии" })
            </td>
        </tr>
    }

</table>

<script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
<script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $(".viewDialog").on("click", function (e) {
            e.preventDefault();

            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true
                })
                .load(this.href);
        });
    });
</script>